/* components/Recommendation/recommendation.wxss */
.Card {
  display: flexbox;
  align-items: center;
  justify-content: center;
  width: 84vw;
  margin: 5%;
  border-radius: 10px;
  background-color: white;
  padding: 3vw;
}
.Container
{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.RecommendedDish {
  width: 100px;
  height: 100px;
  border-radius: 30%;
  overflow: hidden;
}
.Name
{
  display: flex;
  flex-direction: column;
  align-items: center; 
  justify-content: center; 
  margin-top: 30%;
}
.DishName
{
  font-size: 20px;
  margin-bottom: 5px;
  display: block;
  align-items: center;
}
.CanteenName
{
  font-size: 12px;
  display: block;
  align-items: center;
  color: #89909f;
}
.Score
{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center; /* 如果需要水平对齐文本内容 */
}
.Destination
{
  color:#00a4b8;
  font-size: 20px;
  margin-bottom: 20%;
}
.ScoreNumber
{
  font-size: 12px;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  color: #89909f;
}

.Arrow
{
  font-size: 20px;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  color: #89909f;
  margin-top: 60%;
}