.Card {
  display: flexbox;
  align-items: center;
  justify-content: center;
  width: 90vw;
  border-radius: 10px;
  background-color: white;
  padding: 3vw;
  margin-bottom: 3%;
}
.Title
{
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.Name
{
  font-size: 20px;
  margin-bottom: 3%;
}
.Input
{
  background-color: #f5f5f5;
  padding-bottom: 10%;
  border-radius: 5px;
  margin-bottom: 3%;
  margin-top:3%;
}
.End
{
  display: flex;
  flex-direction: row-reverse;
}