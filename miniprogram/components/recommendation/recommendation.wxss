/* components/Recommendation/recommendation.wxss */
.Card {
  display: flexbox;
  align-items: center;
  justify-content: center;
  width: 80vw;
  margin: 5%;
  border-radius: 10px;
  background-color: white;
  padding: 3vw;
}
.NameAndImage
{
  display: flexbox;
}
.RecommendedDish {
  width: 100px;
  height: 100px;
  border-radius: 30%;
  /* 将边框半径设置为元素宽度和高度的一半，实现圆形效果 */
  overflow: hidden;
  /* 隐藏溢出部分，确保裁切成圆形 */
}
.Name
{
  margin-top: 25%;
  display: flex;
  flex-direction: column;
  align-items: center; /* 水平居中 */
  justify-content: center; /* 垂直居中 */
}
.DishName
{
  font-size: 20px;
  margin-bottom: 5px;
  display: block;
  align-items: center;
}
.CanteenName
{
  font-size: 12px;
  display: block;
  align-items: center;
  color: #89909f;
}
.Score
{
  display: flexbox;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  text-align: center; /* 如果需要水平对齐文本内容 */
}
.ScoreValue
{
  color:#00a4b8;
  font-size: 35px;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 25%;
}
.ScoreNumber
{
  font-size: 12px;
  align-items: center;
  justify-content: center;
  white-space: nowrap;
  color: #89909f;
}