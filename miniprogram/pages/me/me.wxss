.UserInformation {
  display: flex;
  align-items: center;
  border-left: 50px;
  border-right: 50px;
  margin-bottom: 20px;
  background-color: #ffffff;
  padding: 25px;
}

.UserAvatar {
  width: 100px;
  height: 100px;
  border-radius: 50%;
  /* 将边框半径设置为元素宽度和高度的一半，实现圆形效果 */
  overflow: hidden;
  /* 隐藏溢出部分，确保裁切成圆形 */
  border: 20px;
}
.weui-input
{
  display: flex;
  align-items: center;
  text-align: center;
}
.UserNickname {
  align-items: center;
  text-align: center;
  font-size: x-large;
  margin-left: 80px;
  font-weight: 400;
}

.Functions {
  display: flex;
  border-radius: 10px;
  margin-left: 5%;
  margin-right: 5%;
  flex-direction: row;
  flex-wrap: wrap;
}
